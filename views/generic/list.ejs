<% var title = 'List - ' + item_name; var current = 'home' %>
<% include ../partials/header.ejs %>

<div id="main-container-noborder" >
	<% if(allowNew) { %>
	<form method="get" action="/new/<%= item_id %>" class="col-md-12" style="padding: 20px;">
		<input type="submit" value="New <%= item_name %>" class="btn btn-primary"/>
	</form>
	<% } %>
<table class="table table-hover table-sm col-md-12">
		<% if(legend) { %>
		<tr>
			<% for(var key in legend) { %>
				<th><%= legend[key] %></th>
			<% } %>
		</tr>
		<% } %>
	<% for(var i=0; i<objects.length ;i++) { %>
		<tr>
		<% for (var key in objects[i]) {
				if(key.slice(0, 2) == 'id') {continue;}
		%>
			<td> <%= objects[i][key] %> </td>
		<%
		   }
		   if(allowShow) {
		%>
			<td><a href="/show/<%= item_id %>/<%= objects[i].id %>" class="btn btn-primary">More Details</a></td>
		<% } %>
		</tr>
	<% } %>
</table>
</div>
<% include ../partials/footer.ejs %>
